{
    "name": "clarity",
    "displayName": "Clarity",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.35.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "clarity",
                "aliases": [
                    "Clarity",
                    "clarity"
                ],
                "extensions": [
                    ".clar"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "clarity",
                "scopeName": "source.clarity",
                "path": "./syntaxes/clarity.json"
            }
        ]
    },
    "scripts": {
        "build": "js-yaml syntaxes/clarity.yaml > syntaxes/clarity.json"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1"
    }
}
